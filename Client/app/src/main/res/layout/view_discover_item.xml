<?xml version="1.0" encoding="utf-8"?>
<com.kuba.skateagramclient.view.DiscoverItem xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:padding="15dp">
    
    <LinearLayout
        android:layout_alignParentLeft="true"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:orientation="vertical">
        <TextView
            android:id="@+id/discoverItemUserNameText"
            android:textSize="25dp"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Kuba"/>

        <TextView
            android:id="@+id/discoverItemUserPostsText"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="25 tricks"/>
        </LinearLayout>

    <Button
        android:id="@+id/discoverItemfollowBtn"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentRight="true"
        android:text="Follow"/>

</com.kuba.skateagramclient.view.DiscoverItem>